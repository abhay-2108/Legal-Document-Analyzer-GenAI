# Legal Document Analyzer Environment Variables
# Copy this file to .env and fill in your actual values

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-fernet-encryption-key-base64-encoded

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# Database Configuration
DATABASE_URL=sqlite:///./legal_analyzer.db

# Redis Configuration (for caching and session management)
REDIS_PASSWORD=your-redis-password

# Azure Storage Configuration (if using Azure Blob Storage)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string

# Application Environment
ENVIRONMENT=development
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# API Configuration
API_HOST=localhost
API_PORT=8000

# Document Storage Configuration
MAX_FILE_SIZE_MB=50
DOCUMENT_RETENTION_DAYS=30

# Privacy Settings
DISABLE_LLM_CACHING=true
DISABLE_LLM_TRAINING=true
LOG_PROMPTS=false
LOG_RESPONSES=false

# Rate Limiting
REQUESTS_PER_MINUTE=60
BURST_SIZE=10

# MCP Server Configuration
NORMS_DB_PORT=8001
RISK_CALCULATOR_PORT=8002
STATUTE_LOOKUP_PORT=8003

# Monitoring & Health Checks
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090
